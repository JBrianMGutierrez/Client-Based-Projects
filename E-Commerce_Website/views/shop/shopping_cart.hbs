<div class="card shopping-cart">
    <div class="card-header bg-dark text-light">
        <i class="fa fa-shopping-cart" aria-hidden="true"></i>
        Shopping cart
        <a href="" class="btn btn-outline-info btn-sm float-right">Continue Shopping</a>
        <div class="clearfix"></div>
    </div>
    <div class="card-body">
{{# if products }}
    {{# each products }}
        <!-- PRODUCT -->
        <div class="row">
            <div class="col-12 col-sm-12 col-md-2 text-center">
                <img class="img-responsive" src="http://placehold.it/120x80" alt="preview" width="100" height="60">
            </div>
            <div class="col-12 text-sm-center col-sm-12 text-md-left col-md-6">
                <h4 class="product-name"><strong>{{ this.item.product_name }}</strong></h4>
                <h4>
                    <small>{{ this.item.product_desc }}</small>
                </h4>
            </div>
            <div class="col-12 col-sm-12 text-sm-center col-md-4 text-md-right row">
                <div class="col-3 col-sm-3 col-md-6 text-md-right" style="padding-top: 5px">
                    <h6><strong><span class="text-muted">PHP </span>{{ this.item.price }}</strong></h6>
                </div>
                <div class="col-4 col-sm-4 col-md-4">
                    <div class="quantity">
                        <input type="number" max="99" min="1" value="{{this.quantity}}" title="Qty" class="qty" size="2">
                    </div>
                </div>
                <div class="col-2 col-sm-2 col-md-2 text-right">
                    <button type="button" class="btn btn-outline-danger btn-xs">
                        <i class="fa fa-trash" aria-hidden="true"></i>
                    </button>
                </div>
            </div>
        </div>
        <hr>
        <!-- END PRODUCT -->
    {{/each}}
{{else}}

{{/if}}
        <div class="pull-right">
            <a href="" class="btn btn-outline-secondary float-right">
                Update shopping cart
            </a>
        </div>
    </div>
    <div class="card-footer">
        <div class="float-right" style="margin: 10px">
            <a href="../checkout" class="btn btn-success float-right">Checkout</a>
            <div class="float-right" style="margin: 5px">
                Total price: <b>PHP {{ totalPrice }}</b>
            </div>
        </div>
    </div>
</div>



