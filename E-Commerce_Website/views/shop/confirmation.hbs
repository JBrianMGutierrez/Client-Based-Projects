
<form action="../checkout/confirmation" method="post" id="checkout_form" class="needs-validation" novalidate>
    <fieldset>
        <legend>Order Confirmation</legend>
        <div class="form-group">
            <label class="col-md-4 control-label" for="order_id">Order ID</label>
            <label class="col-md-4 control-label" for="order_id">{{order_id}}</label>
            <input value="{{order_id}}" id="order_id" name="order_id" class="form-control input-md" required="" type="hidden">
        </div>
        <div class="form-group">
            <label class="col-md-4 control-label" for="first_name">First Name</label>
            <label class="col-md-4 control-label" for="first_name">{{order_first_name}}</label>
            <input value="{{order_first_name}}" id="first_name" name="first_name" class="form-control input-md" required="" type="hidden">
        </div>

        <div class="form-group">
            <label class="col-md-4 control-label" for="last_name">Last Name</label>
            <label class="col-md-4 control-label" for="last_name">{{order_last_name}}</label>
            <input value="{{order_last_name}}" id="last_name" name="last_name" class="form-control input-md" required="" type="hidden">
        </div>

        <div class="form-group">
            <label class="col-md-4 control-label" for="address1">Address 1</label>
            <label class="col-md-4 control-label" for="address1">{{order_line1}}</label>
            <input value="{{order_line1}}" id="address1" name="address1" class="form-control input-md" required="" type="hidden">
        </div>

        <div class="form-group">
            <label class="col-md-4 control-label" for="address2">Address 2</label>
            <label class="col-md-4 control-label" for="address2">{{order_line2}}</label>
            <input value="{{order_line2}}" id="address2" name="address2" class="form-control input-md" required="" type="hidden">
        </div>

        <div class="form-group">
            <label class="col-md-4 control-label" for="singlebutton"></label>
            <div class="col-md-4">
                <button id="submit" name="submit" class="btn btn-primary">Save</button>
            </div>
        </div>
    </fieldset>
</form>