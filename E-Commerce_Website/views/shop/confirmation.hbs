
<form action="../checkout/confirmation" method="post" id="checkout_form" class="needs-validation" novalidate>
    <fieldset>
        <legend>Order Confirmation</legend>
        <div class="form-group">
            <label class="col-md-4 control-label" for="order_id">Order ID</label>
            <label class="col-md-4 control-label" for="order_id">{{jsonPayer.id}}</label>
            <input value="{{jsonPayer.id}}" id="order_id" name="order_id" class="form-control input-md" required="" type="hidden">
        </div>
        <div class="form-group">
            <label class="col-md-4 control-label" for="first_name">Name</label>
            <label class="col-md-4 control-label" for="first_name">{{jsonPayer.payer.payer_info.first_name}} {{jsonPayer.payer.payer_info.last_name}}</label>
            <input value="{{jsonPayer.payer.payer_info.first_name}}" id="first_name" name="first_name" class="form-control input-md" required="" type="hidden">
            <input value="{{jsonPayer.payer.payer_info.last_name}}" id="last_name" name="last_name" class="form-control input-md" required="" type="hidden">
        </div>

        <div class="form-group">
            <label class="col-md-4 control-label" for="email">Email</label>
            <label class="col-md-4 control-label" for="email">{{jsonPayer.payer.payer_info.email}}</label>
            <input value="{{jsonPayer.payer.payer_info.email}}" id="email" name="email" class="form-control input-md" required="" type="hidden">
        </div>

        <div class="form-group">
            <label class="col-md-4 control-label" for="singlebutton"></label>
            <div class="col-md-4">
                <button id="submit" name="submit" class="btn btn-primary">Save</button>
            </div>
        </div>
    </fieldset>
</form>